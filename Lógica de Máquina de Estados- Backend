npm install xstate
const { createMachine, interpret } = require('xstate');

// Exemplo de m√°quina de estados para luz
const luzMachine = createMachine({
  id: 'luz',
  initial: 'off',
  states: {
    off: {
      on: { LIGAR: 'on' }
    },
    on: {
      on: { DESLIGAR: 'off' }
    }
  }
});

const luzService = interpret(luzMachine).start();
